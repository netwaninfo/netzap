{
	"name": "@netzap/contracts",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "rm -rf dist && tsup --watch",
		"build": "rm -rf dist && tsup --silent",
		"lint": "biome check --error-on-warnings",
		"lint:fix": "biome check --write --error-on-warnings",
		"check:types": "tsc --noEmit",
		"check:exports": "attw --pack ."
	},
	"files": [
		"dist"
	],
	"exports": {
		"./chat": {
			"import": "./dist/chat/index.js",
			"require": "./dist/chat/index.cjs",
			"types": "./dist/chat/index.d.ts"
		},
		"./management": {
			"import": "./dist/management/index.js",
			"require": "./dist/management/index.cjs",
			"types": "./dist/management/index.d.ts"
		},
		"./shared": {
			"import": "./dist/shared/index.js",
			"require": "./dist/shared/index.cjs",
			"types": "./dist/shared/index.d.ts"
		}
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.16.2",
		"@netzap/ts-config": "workspace:^",
		"tsup": "^8.2.4",
		"typescript": "^5.5.4"
	},
	"dependencies": {
		"zod": "^3.23.8"
	}
}