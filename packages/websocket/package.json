{
	"name": "@netzap/websocket",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"bump": "ncu --upgrade --target minor -p pnpm --install always",
		"dev": "tsup --watch",
		"build": "tsup --silent",
		"lint": "biome check --error-on-warnings",
		"lint:fix": "biome check --write --error-on-warnings",
		"check:types": "tsc --noEmit",
		"check:exports": "attw --pack ."
	},
	"files": [
		"dist"
	],
	"exports": {
		"./chat": {
			"require": "./dist/chat/index.cjs",
			"types": "./dist/chat/index.d.ts",
			"import": "./dist/chat/index.js"
		}
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.17.2",
		"@netzap/biome-config": "workspace:^",
		"@netzap/ts-config": "workspace:^",
		"tsup": "^8.3.5",
		"typescript": "^5.7.2"
	},
	"dependencies": {
		"@netzap/entities": "workspace:^",
		"zod": "^3.24.1"
	}
}