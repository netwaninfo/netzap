{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "PKG",
	"extends": "./base.json",
	"compilerOptions": {
		"moduleResolution": "bundler",
		"module": "ESNext",
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist"
	},
	"include": [
		"${configDir}/src/**/*"
	],
	"exclude": [
		"${configDir}/coverage",
		"${configDir}/dist",
		"${configDir}/docs",
		"${configDir}/node_modules"
	]
}