		"@types/mime-types": "^2.1.4",
		"@types/node": "^22.10.2",
		"@vitest/coverage-v8": "^2.1.8",
		"@vitest/ui": "^2.1.8",
		"dotenv": "^16.4.7",
		"fastify": "^4.29.0",
		"lodash.merge": "^4.6.2",
		"mongodb": "^6.12.0",
		"prisma": "^6.1.0",
		"supertest": "^7.0.0",
		"tsx": "^4.19.2",
		"type-fest": "^4.30.2",
		"typescript": "^5.7.2",
		"unplugin-swc": "^1.5.1",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^2.1.8"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.717.0",
