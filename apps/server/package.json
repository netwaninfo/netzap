{
	"name": "@netzap/server",
	"version": "1.0.0",
	"private": true,
	"license": "ISC",
	"scripts": {
		"bump": "ncu --upgrade --target minor -p pnpm --install always",
		"build": "nest build",
		"start": "node dist/src/infra/main",
		"dev": "nest start --watch",
		"db:push": "prisma db push",
		"db:seed": "prisma db seed",
		"db:generate": "prisma generate",
		"db:studio": "prisma studio",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui --coverage",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "vitest run --config ./vitest.config.e2e.mts",
		"test:e2e:watch": "vitest --config ./vitest.config.e2e.mts",
		"test:e2e:ui": "vitest --ui --config ./vitest.config.e2e.mts",
		"check:types": "tsc --noEmit",
		"lint:fix": "biome check --write --error-on-warnings",
		"clear:wwjs": "rm -rf .wwebjs_auth .wwebjs_cache",
		"clear:tmp": "find ./tmp -type f ! -name '.gitkeep' -delete"
	},
	"prisma": {
		"seed": "tsx prisma/seed.ts"
	},
	"devDependencies": {
		"@faker-js/faker": "9.3.0",
		"@nestjs/cli": "^10.4.9",
		"@nestjs/schematics": "^10.2.3",
