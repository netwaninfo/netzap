{
	"name": "@netwan/netzap",
	"version": "1.0.0",
	"scripts": {
		"bump:all": "turbo run bump",
		"bump:pack": "turbo run bump --filter=./packages/*",
		"prepack": "turbo run build --filter=./packages/*",
		"prepack:dev": "turbo run dev --filter=./packages/*",
