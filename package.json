		"@biomejs/cli-win32-x64": "^1.9.4",
		"npm-check-updates": "^17.1.12",
		"tsup": "^8.3.5",
		"turbo": "^2.3.3",
		"typescript": "^5.7.2"
	},
	"packageManager": "pnpm@9.14.1",
	"engines": {
		"node": ">=22.12.0"
	}
}